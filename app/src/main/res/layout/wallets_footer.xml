<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/_buttonAddWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="+" />

    <Button
        android:id="@+id/_buttonCancelAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:visibility="visible"
        android:layout_below="@+id/_buttonAddWallet"
        android:layout_alignLeft="@+id/_buttonAddWallet"
        android:layout_alignStart="@+id/_buttonAddWallet" />

    <TextView
        android:id="@+id/_textViewAddWalletName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/_buttonAddWallet"
        android:text="Walletname" />

    <TextView
        android:id="@+id/_textViewAddWalletBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/_buttonAddWallet"
        android:text="Walletbalance" />
</RelativeLayout>